set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
#font pango:monospace 8
font pango:JetBrainsMono 10

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
{{- if eq .chezmoi.hostname "B00T" }}
exec --no-startup-id dex --autostart --environment i3
{{- else if eq .chezmoi.hostname "XPS-9510" }}
exec --no-startup-id dex-autostart --autostart --environment i3
{{- end }}

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
{{- if eq .chezmoi.hostname "B00T" }}
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -nti $HOME/Pictures/Archlinux\ wallpaper\ ASCII/Red\ ASCII\ LOGO\ Small.png
# Lock screen
bindsym $mod+l exec --no-startup-id i3lock -nti $HOME/Pictures/Archlinux\ wallpaper\ ASCII/Red\ ASCII\ LOGO\ Small.png
{{- else if eq .chezmoi.hostname "XPS-9510" }}
exec --no-startup-id xss-lock --transfer-sleep-lock -- betterlockscreen -l -s dim -w $HOME/Pictures/enso_wallpaper.jpg
# Lock screen
bindsym $mod+l exec betterlockscreen -l dim -w $HOME/Pictures/enso_wallpaper.jpg
{{- end }}

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec nm-applet

# Polybar at startup
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
{{ if eq .chezmoi.hostname "B00T" }}
# Numlockx at startup
exec --no-startup-id numlockx on
{{ end }}
# Polkit-gnome at startup
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
{{ if eq .chezmoi.hostname "XPS-9510" }}
# Picom at startup
exec --no-startup-id picom
{{ end}}
# Dunst at startup
exec --no-startup-id dunst

# Flameshot at startup
exec --no-startup-id flameshot
bindsym $mod+Shift+S exec flameshot gui
{{ if eq .chezmoi.hostname "B00T" }}
# Redshift at startup
exec --no-startup-id redshift 
{{ end }}
# Feh at startup
{{- if eq .chezmoi.hostname "B00T" }}
exec --no-startup-id feh $HOME/Pictures/Archlinux\ wallpaper\ ASCII/Red\ ASCII\ LOGO\ Small.png --bg-center 
{{- else if eq .chezmoi.hostname "XPS-9510" }}
exec --no-startup-id feh /home/alrick/Pictures/enso_wallpaper.jpg --bg-center
{{- end }}

# Discord at startup
exec discord 
{{ if eq .chezmoi.hostname "B00T" }}
# Ferdi at startup
exec ferdi
{{ end }}
{{- if eq .chezmoi.hostname "XPS-9510" }}
# Natural Scrolling
exec --no-startup-id xinput --set-prop 11 "libinput Natural Scrolling Enabled" 1

# Tap to click touchpad
exec xinput set-prop "DLL0945:00 04F3:311C Touchpad" "libinput Tapping Enabled" 1
{{ end }}
# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
{{ if eq .chezmoi.hostname "XPS-9510" }}
# Brightness control
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
{{ end }}
# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
# bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# move tiling windows via drag & drop by left-clicking into the title bar,
# or left-clicking anywhere into the window while holding the floating modifier.
tiling_drag modifier titlebar

# start a terminal
bindsym $mod+Return exec kitty

# Open boomer
bindsym --whole-window $mod+Button4 exec --no-startup-id boomer

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
