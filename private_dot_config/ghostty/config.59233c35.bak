# Options
theme = kitty_theme
font-family = JetBrainsMono Nerd Font
font-size = 15.5
window-decoration = false
unfocused-split-opacity = 1
confirm-close-surface = false
auto-update = check
gtk-adwaita = false
gtk-single-instance = true
# custom-shader = shaders/crt.glsl

# Keybindings
keybind = ctrl+shift+i=new_split:right
keybind = ctrl+shift+o=new_split:down
keybind = ctrl+shift+z=toggle_split_zoom
keybind = shift+up=goto_split:previous
keybind = shift+down=goto_split:next
keybind = shift+right=goto_split:right
keybind = shift+left=goto_split:left
keybind = ctrl+shift+h=write_screen_file:open
keybind = ctrl+shift+plus=increase_font_size:1
